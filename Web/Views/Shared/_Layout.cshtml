<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mavenlink Invoice</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            text-align: center;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }

        table {
            margin-left: auto;
            margin-right: auto;
        }
        table td:first-child {
            text-align: left;
        }

        input.toggler {
            display: none;
        }
        input.toggler + table {
            display: none;
        }
        input.toggler:checked + table {
            display: table;
        }

        .validation-summary-errors {
            display: inline-block;
            color: red;
        }
    </style>
</head>
<body>
    <header>
        <h1>
            <a href="https://app.mavenlink.com/time_entries" title="Mavenlink report">Mavenlink report</a> &#8594; Invoice
        </h1>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>No scripts, minimum styles, only hardcore.</p>
        <p><a href="https://www.linkedin.com/in/burkovsky/" title="Anton Burkovsky">Anton Burkovsky</a></p>
    </footer>
</body>
</html>
